{{! CREATE form }}
<h2>Edit a Customer</h2>
<form class='cuForm' id='create_customer_form'>
    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Submit</th>
            </tr>
        </thead>

        <tbody>
            <td>
                <input type='number' name='edit_customer_id' id='edit_customer_id' readonly />
            </td>
            <td>
                <input type='text' name='edit_customer_name' id='edit_customer_name' required />
            </td>
            <td>
                <input type='text' name='edit_customer_email' id='edit_customer_email'/>
            </td>
            <td>
                <button type="submit">Update Customer</button>
            </td>
        </tbody>
    </table>
</form>